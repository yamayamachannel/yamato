<p id="notice"><%= notice %></p>

<h1>プロフィール</h1>

<table>
  <thead>
    <tr>
    
      <th width=20% >お名前</th>

      <th width=20% >好きな食べ物</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.title %></td>
        <td><%= memo.body %></td>
        <td><%= link_to '見る', memo %></td>
        <td><%= link_to '編集', edit_memo_path(memo) %></td>
        <td><%= link_to '削除', memo, method: :delete, data: { confirm: 'このデータを削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

